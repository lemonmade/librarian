{
  "name": "pattern-library",
  "version": "0.0.1",
  "description": "A pattern library generator that consumes files of all types.",
  "main": "dist/index.js",
  "scripts": {
    "test": "NODE_PATH=$NODE_PATH:./src:./test mocha test/ --recursive --compilers js:babel-core/register --reporter spec",
    "test:cover": "NODE_PATH=$NODE_PATH:./src:./test babel-node $(npm bin)/isparta cover --reporter text --reporter html $(npm bin)/_mocha test/ -- --recursive --reporter spec",
    "test:watch": "npm test -- --watch --reporter min",
    "lint": "eslint . --max-warnings 0",
    "start": "NODE_PATH=$NODE_PATH:./src babel-node src/index.js",
    "flow": "flow"
  },
  "author": "Chris Sauve <chrismsauve@gmail.com>",
  "license": "MIT",
  "eslintConfig": {
    "extends": "shopify",
    "parser": "babel-eslint",
    "plugins": [
      "shopify"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "shopify/require-flow": 0
    }
  },
  "babel": {
    "presets": [
      "stage-0",
      "es2015"
    ],
    "plugins": [
      "syntax-class-properties",
      "transform-class-properties"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^4.1.8",
    "babel-plugin-syntax-class-properties": "^6.5.0",
    "babel-plugin-syntax-flow": "^6.5.0",
    "babel-plugin-transform-class-properties": "^6.5.2",
    "babel-plugin-transform-flow-strip-types": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "eslint": "^1.10.3",
    "eslint-config-shopify": "^7.0.1",
    "eslint-plugin-shopify": "^7.0.0",
    "flow-bin": "^0.21.0",
    "isparta": "^4.0.0",
    "mocha": "^2.4.5",
    "prettyjson": "^1.1.3",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0"
  },
  "dependencies": {
    "babel-traverse": "^6.5.0",
    "babel-types": "^6.5.2",
    "babylon": "^6.5.2"
  }
}
